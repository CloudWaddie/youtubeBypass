{
  "name": "youtube-restriction-manager",
  "version": "1.0.0",
  "description": "Control YouTube content restrictions via HTTP headers",
  "scripts": {
    "build": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "set TARGET_BROWSER=chrome && webpack --mode production",
    "build:firefox": "set TARGET_BROWSER=firefox && webpack --mode production",
    "dev": "webpack --mode development --watch",
    "dev:chrome": "set TARGET_BROWSER=chrome && webpack --mode development --watch",
    "dev:firefox": "set TARGET_BROWSER=firefox && webpack --mode development --watch",
    "prepare": "npm run build"
  },
  "dependencies": {
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^9.2.1",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^10.0.0",
    "path-browserify": "^1.0.1",
    "util": "^0.12.5",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4"
  }
}
